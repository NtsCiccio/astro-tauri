---
import Layout from "./Layout.astro";
import BackButton from "../components/BackButton.astro";

interface Props {
	pageTitle: string;
	title?: string;
}

const { pageTitle, title } = Astro.props;
---

<Layout {pageTitle}>
	<div class="flex min-h-screen flex-col items-center mt-6">
		<div class="w-full max-w-2xl">
			<div class="mb-6">
				<BackButton />
			</div>

			{
				title && (
					<h1 class="mb-8 text-center text-3xl font-bold text-gray-50 sm:text-4xl">{title}</h1>
				)
			}

			<slot />
		</div>
	</div>
</Layout>
